<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSN_Parents_Portal</title>

    <!-- Bootstrap Reference -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Jquery Reference -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    @* <link rel="stylesheet" href="~/css/styleshistory.css"/> *@ <!-- include nyo na lang ayusin nyo muna HAHA-->
    <link rel="stylesheet" href="~/css/request.css">

    <!-- Font Reference -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</head>

<body>
    <!-- Navigation Sidebar -->

    <div class="row">
        <div class="col-md-3">
            <nav class="sidebar">
                <!-- Logo and Text Below -->
                <div class="logo-container">
                    <img src="~/images/csnlogo.png" alt="CSN Logo" class="logo">
                    <p class="logo-text">Parent Portal</p>
                </div>

                <ul class="nav-items">
                    <li>
                        <a href="@Url.Action("Index","Home")">
                            <!-- Link to the main page -->
                            <i class="fas fa-dashboard"></i>
                            <span class="nav-item">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Enroll", "Account")">
                            <i class="fas fa-pen"></i>
                            <span class="nav-item">Enroll</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("History", "Account")">
                            <i class="fas fa-history"></i>
                            <span class="nav-item">History</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Request", "Account")">
                            <i class="fas fa-envelope"></i>
                            <span class="nav-item">Request</span>
                        </a>
                    </li>
                </ul>

                <!-- Profile and Logout Section -->
                <div class="nav-bottom">
                    <ul>
                        <li>
                            <a href="@Url.Action("Edit", "Account")">
                                <i class="fas fa-edit"></i>
                                <span class="nav-item">Edit Profile</span>
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Login","Home")">
                                <i class="fas fa-sign-out-alt"></i>
                                <span class="nav-item">Log Out</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <div class="col-md-9">
            @RenderBody()
        </div>
    </div>

    @* <div class="row">
        <footer>
            &copy; 2024 - CSN_Parents_Portal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </footer>
    </div>" *@
    
    
</body>
</html>
