
<!-- Content Section -->

<div class="content">
    <h1>Enroll</h1>
    <div class="enroll-form">
        <label for="eventTitle">Event Title</label>
        <select id="eventTitle">
            <option>Parent-Child Creative Arts Workshop 2024</option>
        </select>

        <label for="eventDate">Event Date</label>
        <input type="date" id="eventDate" value="2024-10-11" disabled>

        <label for="eventTime">Event Time</label>
        <input type="time" id="eventTime" value="13:00" disabled>

        <label for="eventType">Event Type</label>
        <input type="text" id="eventType" value="Training" disabled>

        <label for="description">Description</label>
        <textarea id="description" disabled>Parents and children will collaborate on art projects such as painting, crafting, and pottery. All materials are provided, and participants can take home their creations, making it a fun and creative way to bond and explore art together.</textarea>

        <form onsubmit="showPopup(); return false;"> <!--popup when the register button is clicked-->
            <button class="register-btn" type="submit">REGISTER</button>
        </form>
    
        <script> /*popup when the register button is clicked*/
            function showPopup() {
                // Create a div for the popup
                var popup = document.createElement("div");
                popup.style.position = "absolute";
                popup.style.top = "50%";
                popup.style.left = "50%";
                popup.style.transform = "translate(-50%, -50%)";
                popup.style.width = "575px";
                popup.style.height = "252px";
                popup.style.padding = "20px";
                popup.style.border = "4px solid black";
                popup.style.backgroundColor = "white";
                popup.style.borderRadius = "10px";
                popup.style.zIndex = "1000";
                popup.innerHTML = "You successfully registered!";
                popup.style.fontSize = "24px";
                popup.style.textAlign = "center";
                popup.style.fontFamily = "Montserrat";
                popup.style.justifyContent = "center";
                popup.style.display = "flex"; // Use flexbox
                popup.style.alignItems = "center"; // Center vertically
            
                
                // Add a close button
                var closeButton = document.createElement("button");
                closeButton.innerHTML = "X";
                closeButton.style.position = "absolute";
                closeButton.style.top = "26px"; // Distance from the top of the popup
                closeButton.style.right = "26px";
                closeButton.style.border = "none";
                closeButton.style.fontSize = "25px";
                closeButton.style.fontWeight = "bold";
                closeButton.style.background = "transparent";
                closeButton.onclick = function() {
                    document.body.removeChild(popup);
                };
                
                popup.appendChild(closeButton);
                
                // Add the popup to the body
                document.body.appendChild(popup);
            }
        </script>
    
    </div>
</div>