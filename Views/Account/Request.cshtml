

  

    	<!-- Content for the main page -->
<main>
    <h1>Request Report</h1>
    <div class="form-container">
        <form id="requestForm">
            <!-- Date Input Field -->
            <label for="date">Date</label>
            <input type="date" id="date" name="date">
    
            <!-- Request Type Dropdown -->
            <label for="type">Type of Request</label>
            <select id="type" name="type">
                <option value="type1">Child's Activity Report</option>
                <option value="type2">Attendance Report</option>
            </select>
    
            <!-- Description Textarea -->
            <label for="description">Description</label>
            <textarea id="description" name="description" rows="4" placeholder="Brief description of the requested report."></textarea>
    
            <!-- Submit Button -->
            <button type="submit">SUBMIT</button>
        </form>
    
        <script>
            // Function to show the popup
            function showPopup() {
                var popup = document.createElement("div");
                popup.style.position = "absolute";
                popup.style.top = "50%";
                popup.style.left = "50%";
                popup.style.transform = "translate(-50%, -50%)";
                popup.style.width = "575px";
                popup.style.height = "252px";
                popup.style.padding = "20px";
                popup.style.border = "4px solid black";
                popup.style.backgroundColor = "white";
                popup.style.borderRadius = "10px";
                popup.style.zIndex = "1000";
                popup.innerHTML = "Success! Your request has been submitted. " + 
                                    "Please allow 24-48 hours for processing. " + 
                                    "We'll update you soon.";
                popup.style.fontSize = "24px";
                popup.style.textAlign = "center";
                popup.style.fontFamily = "Montserrat";
                popup.style.justifyContent = "center";
                popup.style.display = "flex";
                popup.style.alignItems = "center";
    
                // Add a close button
                var closeButton = document.createElement("button");
                closeButton.innerHTML = "X";
                closeButton.style.position = "absolute";
                closeButton.style.top = "26px";
                closeButton.style.right = "26px";
                closeButton.style.border = "none";
                closeButton.style.fontSize = "25px";
                closeButton.style.fontWeight = "bold";
                closeButton.style.background = "transparent";
                closeButton.onclick = function() {
                    document.body.removeChild(popup);
                };
                    
                popup.appendChild(closeButton);
                document.body.appendChild(popup);
            }
    
            // Prevent form submission and show popup
            document.getElementById('requestForm').addEventListener('submit', function(event) {
                event.preventDefault(); // Prevent form from submitting
                showPopup(); // Show popup
            });
        </script>
    </div>
</main>

