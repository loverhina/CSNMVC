<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Child Pre-Registration Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/styles_prereg.css"> <!-- Linking external CSS file -->
</head>
<body class="container mt-5">

        <!-- CSN Logo -->
        <div class="text-center mb-4">
            <img src="../images/csnlogo.png" alt="CSN Logo" class="img-fluid" style="max-width: 200px;">
        </div>

    <h2 class="text-center mb-4">Child Pre-Registration Form</h2>
    
    <!-- Progress Indicator -->
    <div class="progress mb-4">
        <div class="progress-bar" style="width: 100%;" role="progressbar"></div>
    </div>
    <div class="text-center mb-4">
        <small>Step 4: Education of Child</small>
    </div>

    <form id="registrationForm"> <!-- Removed action and method attributes -->

        <!-- School of Child and Grade Level Section -->
        <div class="form-row mb-3">
            <div class="col-md-6">
                <label for="school">School of Child:</label>
                <input type="text" id="school" name="school" class="form-control" placeholder="Enter school name" required>
            </div>
            <div class="col-md-6">
                <label for="grade-level">Grade Level:</label>
                <input type="number" id="grade-level" name="grade-level" class="form-control" placeholder="Enter grade level" required>
            </div>
        </div>

        <!-- Class Type Section -->
        <div class="form-group mb-3">
            <label>Class Type:</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="class-regular" name="class-type" value="Regular" required>
                <label class="form-check-label" for="class-regular">Regular Class</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="class-sped" name="class-type" value="SPED" required>
                <label class="form-check-label" for="class-sped">SPED Class</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" id="class-mainstream" name="class-type" value="Mainstream/Mixed" required>
                <label class="form-check-label" for="class-mainstream">Mainstream/Mixed</label>
            </div>
        </div>

        <!-- Schedule of Class Section -->
        <div class="form-group mb-3">
            <label for="class-schedule">Schedule of Class in School:</label>
            <input type="text" id="class-schedule" name="class-schedule" class="form-control" placeholder="Enter class schedule" required>
        </div>

        <!-- Preferred Schedule of Therapy Section -->
        <div class="form-group mb-3">
            <label>Preferred Schedule of Therapy:</label>
            <div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="therapy-morning" name="therapy-schedule" value="Morning" required>
                    <label class="form-check-label" for="therapy-morning">Morning (9:30am-12:30pm)</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" id="therapy-afternoon" name="therapy-schedule" value="Afternoon" required>
                    <label class="form-check-label" for="therapy-afternoon">Afternoon (2:00pm-5:00pm)</label>
                </div>
            </div>
        </div>

        <!-- Back and Submit Buttons -->
        <div class="form-row mb-3">
            <div class="col-md-6">
                <button type="button" class="btn btn-secondary" onclick="goBack()">Back</button>
            </div>
            <div class="col-md-6 text-right">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>

        <script>
            // Handle form submission
            document.getElementById("registrationForm").onsubmit = function(event) {
                event.preventDefault(); // Prevent the default form submission

                // Display success message
                alert("You have successfully completed the pre-registration process. Please wait for an email with your login credentials.");
            };

            function goBack() {
                // Logic to go back to the previous page
                window.history.back(); // This will take the user to the previous page
            }
        </script>
    </form>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
